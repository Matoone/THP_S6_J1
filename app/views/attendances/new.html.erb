<h1>Attendances#new</h1>
<p>Find me in app/views/attendances/new.html.erb</p>

<%= form_tag event_attendances_path(@event.id) do %>
<article>
  <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
  <% end %>
  <label class="amount">
      <span>Somme à prélever: <%= @event.price %></span>
  </label>
</article>
 <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
        
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Inscription à l'évènement <%= @event.title %>"
          data-amount= "<%= @event.price * 100 %>%"
          data-currency="eur"
          data-locale="fr"></script>
<% end %>

